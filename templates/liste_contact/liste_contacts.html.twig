{% extends 'dashboard.html.twig' %}


{% block page_content %}
	{% block card_user %}
		<h1 class="display-4 fw-bold text-center py-5">Liste des contacts</h1>

		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Nom</th>
						<th scope="col">Email</th>
						<th scope="col">Téléphone</th>
						<th scope="col">Type de contact</th>
					</tr>
				</thead>
				<tbody>
					{% for contact in contacts %}
						<tr>
							<td>{{ contact.firstName }}
								{{ contact.lastName }}</td>
							<td>{{ contact.email }}</td>
							<td>{{ contact.phone }}</td>
							<td>{{ contact.type_contact }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

	{% endblock %}
{% endblock %}
